#include <iostream>     
#include <cctype>
#include <cstring>
    using namespace std;
    
    bool pal(char* s, int k) {             //Задача 11
    for (int i = 0; i < k; i++) {
        for (int j = i + 1; j < k; j++) {
            if (s[i] == s[j]) {
                return false;
            }
        }
    }
    return true;
}
    int main()
    {
        
        setlocale(LC_ALL, "Russian");
    char str[100];
    int k;

    cout << "Введите строку: ";
    cin.getline(str, 100);

    cout << "Введите k: ";
    cin >> k;

    int len = strlen(str);

    cout << "Подстроки длины " << k << " с уникальными символами:" << endl;

    for(int i = 0; i <= len - k; i++) {
        char s[100];
        for(int j = 0; j < k; j++) {
            s[j] = str[i + j];
        }
        s[k] = '\0';

        if(pal(s, k)) {
            cout << s<< endl;
        }
    }
    return 0;
}
