#include <iostream>     
#include <cctype>
#include <cstring>
    using namespace std;
    int main()
    {
        setlocale(LC_ALL, "Rus");
    
    char text[100];
    int s;

    cout << "Введите строку: ";
    cin.getline(text, 100);

    cout << "Введите сдвиг: ";
    cin >> s;

    for(int i = 0; i < strlen(text); i++) {
        if(isupper(text[i])) {
            text[i] = (text[i] - 'A' + s) % 26 + 'A';
        }
        else if(islower(text[i])) {
            text[i] = (text[i] - 'a' + s) % 26 + 'a';
        }
    }

    cout << "Результат: " << text << endl;
    return 0;
    }
