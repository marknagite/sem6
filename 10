#include <iostream>     
#include <cctype>
#include <cstring>
    using namespace std;
    int main()
    {
        setlocale(LC_ALL, "Rus");
 

    char str[100];
    cout << "Введите строку: ";
    cin.getline(str, 100);

    int s = 0;

    for(int i = 0; i <= strlen(str); i++) {
        if(str[i] == ' ' || str[i] == '\0') {
            reverse(str + s, str + i);
            s = i + 1;
        }
    }

    cout << str << endl;
    return 0;
    }
