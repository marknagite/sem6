#include <iostream>   
#include <cctype>
#include <cstring>
    using namespace std;
    int main()
    {
        setlocale(LC_ALL, "Russ");


    char str[256];
    cout << "Введите строку: ";
    cin.getline(str, 256);

    bool n = true;

    for(int i = 0; i < strlen(str); i++) {
        if(n && isalpha(str[i])) {
            str[i] = toupper(str[i]);
            n = false;
        } 
        else if(isalpha(str[i])) {
            str[i] = tolower(str[i]);
        }

        if(str[i] == '.' or  str[i] == '!' or  str[i] == '?') {
            n = true;
        }
    }

    cout << str << endl;
    return 0;
    }
